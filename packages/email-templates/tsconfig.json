{
  "compilerOptions": {
    "composite": false,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "noEmit": true,
    "strictNullChecks": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", ".react-email"]
}
