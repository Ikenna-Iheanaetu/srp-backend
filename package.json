{
	"name": "sports-recruitment-monorepo",
	"version": "1.0.0",
	"description": "Sports Recruitment Platform - Monorepo",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"packageManager": "pnpm@10.22.0",
	"scripts": {
		"start:dev": "pnpm --filter ./apps/api start:dev",
		"build": "pnpm --filter ./apps/api build",
		"lint": "pnpm -r lint",
		"test": "pnpm -r test",
		"typecheck": "pnpm -r typecheck",
		"clean": "pnpm -r clean && rm -rf node_modules",
		"web:dev": "pnpm --filter web dev",
		"api:dev": "pnpm --filter api start:dev",
		"api:prisma:generate": "pnpm --filter api prisma:generate",
		"api:prisma:push": "pnpm --filter api prisma:push",
		"api:prisma:seed": "pnpm --filter api prisma:seed"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^8.26.0",
		"@typescript-eslint/parser": "^8.34.0",
		"esbuild": "^0.25.10",
		"eslint": "^9.17.0",
		"prettier": "^3.4.2",
		"turbo": "^2.5.6",
		"typescript": "^5.7.3"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=9.0.0"
	}
}
